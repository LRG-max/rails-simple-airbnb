<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-center flex-grow-1">Our Flats</h1>
      <a href="<%= new_flat_path %>" class="btn btn-outline-secondary">New Flat</a>
    </div>
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-md-4">
          <div class="card shadow-sm mb-4">
            <%= image_tag flat.image_url, class: "card-img-top", alt: flat.name if flat.image_url.present? %>
            <div class="card-body text-center">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text">
                <i class="fas fa-map-marker-alt"></i> <%= flat.address %>
              </p>
              <p class="d-flex justify-content-between">
                <span><i class="fas fa-dollar-sign"></i> <strong><%= flat.price_per_night %> per night</strong></span>
                <span><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %> guests</span>
              </p>
              <div class="d-flex justify-content-between">
                <a href="<%= flat_path(flat) %>" class="btn btn-outline-secondary">Details</a>
                <a href="<%= edit_flat_path(flat) %>" class="btn btn-outline-secondary">Edit</a>
                <%= link_to "Delete", flat_path(flat), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-secondary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
