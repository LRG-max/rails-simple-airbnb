<div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg mb-4">
          <%= image_tag @flat.image_url, class: "card-img-top", alt: @flat.name if @flat.image_url.present? %>
          <div class="card-body text-center">
            <h2 class="card-title"><%= @flat.name %></h2>
            <p class="card-text">
              <i class="fas fa-map-marker-alt"></i> <strong><%= @flat.address %></strong>
            </p>
            <p><%= @flat.description %></p>
            <p class="d-flex justify-content-between">
              <span><i class="fas fa-dollar-sign"></i> <strong><%= @flat.price_per_night %> per night</strong></span>
              <span><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %> guests</span>
            </p>
            <div class="d-flex justify-content-center mt-3">
              <a href="<%= edit_flat_path(@flat) %>" class="btn btn-outline-secondary me-2">Edit</a>
              <%= link_to "Delete", flat_path(@flat), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-secondary" %>
              <a href="<%= flats_path %>" class="btn btn-outline-secondary ms-2">Back to Listings</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
